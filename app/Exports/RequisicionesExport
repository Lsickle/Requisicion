<?php

namespace App\Exports;

use Maatwebsite\Excel\Events\AfterSheet;
use PhpOffice\PhpSpreadsheet\Style\Fill;
use PhpOffice\PhpSpreadsheet\Style\NumberFormat;
use PhpOffice\PhpSpreadsheet\Style\Alignment;

class RequisicionesExport extends BaseStyledExport
{
    protected function afterSheet(AfterSheet $event): void
    {
        $sheet   = $event->sheet->getDelegate();
        $lastCol = $sheet->getHighestColumn();
        $lastRow = $sheet->getHighestRow();

        // Encabezados naranja suave
        $sheet->getStyle("A2:{$lastCol}2")->getFill()->setFillType(Fill::FILL_SOLID)
              ->getStartColor()->setARGB('FFE8D5');

        // Fechas
        foreach (['Fecha Requisición','Fecha Último Estatus','Fecha Creación'] as $hdr) {
            if ($col = $this->col($hdr)) {
                $sheet->getStyle("{$col}3:{$col}{$lastRow}")
                      ->getNumberFormat()->setFormatCode(NumberFormat::FORMAT_DATE_DDMMYYYY);
            }
        }

        // Prioridad centrada
        if ($col = $this->col('Prioridad')) {
            $sheet->getStyle("{$col}3:{$col}{$lastRow}")
                  ->getAlignment()->setHorizontal(Alignment::HORIZONTAL_CENTER);
        }

        // Productos Solicitados ancho
        if ($col = $this->col('Productos Solicitados')) {
            $sheet->getColumnDimension($col)->setWidth(70);
        }
    }
}
